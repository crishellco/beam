{
  "name": "@crishellco/beam",
  "version": "0.0.0-semantically-released",
  "author": "Chris Mitchell (@crishellco)",
  "description": "A tiny, dead simple JavaScript event bus.",
  "source": "src/index.js",
  "exports": {
    "require": "./dist/beam.js",
    "default": "./dist/beam.modern.js"
  },
  "main": "./dist/beam.js",
  "module": "./dist/beam.module.js",
  "unpkg": "./dist/beam.umd.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "microbundle -f cjs,umd src/index.cjs.js && microbundle -f es,modern src/index.js",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit": "jest src",
    "lint:js": "eslint src",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crishellco/beam.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crishellco/beam/issues"
  },
  "homepage": "https://crishellco.github.io/beam/",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.21.3",
    "@babel/preset-env": "7.20.2",
    "@commitlint/cli": "17.5.0",
    "@form8ion/commitlint-config": "1.0.45",
    "@form8ion/remark-lint-preset": "5.0.0",
    "@babel/eslint-parser": "7.21.3",
    "babel-jest": "29.5.0",
    "core-js": "3.29.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "js-beautify": "1.14.7",
    "lint-staged": "13.2.0",
    "microbundle": "0.15.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.6",
    "remark-cli": "11.0.0",
    "remark-toc": "8.0.1",
    "semantic-release": "20.1.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "pre-push": "yarn test:unit --coverage=false"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint src",
      "git add"
    ]
  }
}
