{
  "name": "@crishellco/beam",
  "version": "0.0.0-semantically-released",
  "author": "Chris Mitchell (@crishellco)",
  "description": "A tiny, dead simple JavaScript event bus.",
  "source": "src/index.js",
  "exports": {
    "require": "./dist/beam.js",
    "default": "./dist/beam.modern.js"
  },
  "main": "./dist/beam.js",
  "module": "./dist/beam.module.js",
  "unpkg": "./dist/beam.umd.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "microbundle -f cjs,umd src/index.cjs.js && microbundle -f es,modern src/index.js",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit": "jest src",
    "lint:js": "eslint src",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crishellco/beam.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crishellco/beam/issues"
  },
  "homepage": "https://crishellco.github.io/beam/",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@commitlint/cli": "16.0.2",
    "@form8ion/commitlint-config": "1.0.26",
    "@form8ion/remark-lint-preset": "2.1.7",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.4.6",
    "core-js": "3.20.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "js-beautify": "1.14.0",
    "lint-staged": "12.1.7",
    "microbundle": "0.14.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "remark-cli": "10.0.1",
    "remark-toc": "8.0.1",
    "semantic-release": "18.0.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "pre-push": "yarn test:unit --coverage=false"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint src",
      "git add"
    ]
  }
}
